<?xml version="1.0" encoding="UTF-8" ?>

<project name="test" description="The test file contains different targets to ease the testing of your project." default="">

    <!-- Import test build files. -->
    <import>
        <fileset dir="${phing.dir.test}">
            <!-- When in full project mode. -->
            <include name="test/*.xml" />
            <!-- Wen in test package mode. -->
            <include name="phing/*.xml" />
        </fileset>
    </import>

    <!-- Run full functional testing with behat. -->
    <target
        name="test-run-behat"
        description="Refresh configuration and run behat scenarios."
        depends="
            test-behat-setup,
            test-composer-install">
        <echo msg="Starting testing..." level="info" />
        <foreach param="dirname" absparam="absname" target="test-behat-exec">
            <fileset dir="${behat.dir}">
                <include name="**.yml"/>
            </fileset>
        </foreach>

        <!-- Run all provided behat configuration tests -->
        <if>
            <equals arg1="${behat.generic.package.enable}" arg2="1" />
            <then>
                <foreach param="dirname" absparam="absname" target="test-behat-exec">
                    <fileset dir="${behat.dir}/vendor/${behat.generic.package}">
                        <include name="**.yml"/>
                    </fileset>
                </foreach>
            </then>
        </if>
    </target>

    <!-- Compare current install against production. -->
    <target name="test-run-backtrac" hidden="true" description="Compare current install against production.">
        <backtrac-set-url environment="dev" url="${project.url.base}" project_id="${project.backtrac.id}" auth_token="${backtrac.token}" />
        <backtrac-compare compare_mode="compare_prod_dev" project_id="${project.backtrac.id}" auth_token="${backtrac.token}" />
    </target>

    <!-- Run a full static analysis with phpcs. -->
    <target
        name="test-run-phpcs"
        description="Refresh configuration and run phpcs review."
        depends="
            test-phpcs-setup,
            test-phpcs-exec" />

    <!-- Run a full static analysis with phpcs. -->
    <target
        name="test-run-phpunit"
        description="Refresh configuration and run phpunit tests."
        depends="
            test-phpunit-setup,
            test-composer-install,
            test-phpunit-exec" />

    <!-- Run a full static analysis qa console. -->
    <target
        name="test-run-qa"
        hidden="true"
        description="Refresh configuration and run qa review."
        depends="
            test-phpcs-setup,
            test-qa-exec" />

    <!-- Build test package. -->
    <target name="build-project-test" hidden="true">

        <!-- Set package name for re-use. -->
        <property
            name="test-package"
            value="${project.tmp.dir}/platform-dev-test-${platform.package.version.current}.tar.gz" />

        <!-- Delete previous test package if exists. -->
        <delete file="${test-package}" />

        <!-- Create our phing test folder. -->
        <mkdir dir="${tests.dir}/phing" />

        <!-- Copy our phing build test folder. -->
        <copy todir="${tests.dir}/phing" overwrite="true">
            <fileset dir="${phing.dir.test}/test">
                <include name="**" />
            </fileset>
        </copy>

        <!-- Copy the main build file. -->
        <copy
            file="${phing.dir.test}/test.xml"
            tofile="${tests.dir}/build.xml"
            overwrite="true" />

        <!-- Copy the main build file. -->
        <copy
            file="${phing.dir.test}/build.xml"
            tofile="${tests.dir}/phing/build.xml"
            overwrite="true" />

        <!-- Package the test dir. -->
        <tar destfile="${test-package}" compression="gzip">
            <fileset dir="${tests.dir}">
                <exclude name="vendor/**" />
                <exclude name="bin/**" />
                <exclude name="behat.yml" />
                <exclude name="phpunit.xml" />
            </fileset>
        </tar>

        <!-- Delete a the phing dir. -->
        <!--
                <delete
                    dir="${tests.dir}/phing"
                    includeemptydirs="true"
                    verbose="true"
                    failonerror="true" />
        -->
    </target>

    <!-- Do quality assurance checks. -->
    <target name="test-qa-exec" hidden="true">
        <exec
            command="${toolkit.dir.bin}/qa \
                review:full \
                --no-interaction \
                --ansi"
            passthru="true"
            checkreturn="true"
        />
    </target>

</project>
